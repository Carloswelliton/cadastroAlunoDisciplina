    <%- include ('partials/header.ejs') %>
    <body>
        <%- include ('partials/navbar.ejs') %>
        <section class="vh-100" style="background-color: #eee;">
            <hr>
           
            <div class="container h-100" >
              <div class="row d-flex justify-content-center align-items-center h-100" >
                <div class="col-lg-12 col-xl-11" >
                  <div class="card text-black" style="border-radius: 25px; background-color: #FBFCFD;">
                    <div class="card-body p-md-5">
                      <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
          
                          <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Cadastrar Aluno</p>
          
                          <form class="mx-1 mx-md-4" method="POST" action="/salvar/aluno" id="formAluno" style="background-color: #FBFCFD;">
          
                            <div class="d-flex flex-row align-items-center mb-4">
                              <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                              <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                <input id="nome" type="text" placeholder="Digite seu nome completo" class="form-control" name="nome" required>
                                <small id="erroNome" class="form-text text-danger"></small>
                                <label for="nome">Nome completo</label>
                                
                              </div>
                            </div>
          
                            <div class="d-flex flex-row align-items-center mb-4">
                              <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                              <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                <input id="nascimento" type="date" class="input-group date form-control" name="nascimento" required>
                                <small id="erroNascimento" class="form-text text-danger"></small>
                                <label for="nascimento">Data de Nascimento</label>
                              </div>
                            </div>
          
                            <div class="d-flex flex-row align-items-center mb-4">
                              <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                              <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                <input id="matricula" type="number" placeholder="Deve conter 8 dígitos " class="form-control" name="matricula" required>
                                <small id="erroMatricula" class="form-text text-danger"></small>
                                <label for="matricula">Código da matricula</label>
                              </div>
                            </div>
          
                            <div class="d-flex flex-row align-items-center mb-4">
                              <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                              <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                <input id="turma" type="number" placeholder="Conter de 4 a 6 digitos" class="form-control" name="turma" required>
                                <small id="erroTurma" class="form-text text-danger"></small>
                                <label for="turma">Código da Turma</label>
                              </div>
                            </div>
          
        
          
                            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                              <button  type="submit" class="btn btn-success btn-lg">Salvar</button>
                            </div>
          
                          </form>
          
                        </div>
                        <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
          
                          <img src="/img/estudante.png"
                            class="img-fluid" alt="Sample image" style="Border-radius: 15px;">
          
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>     


        <script  src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>

        <script src="/js/Validation.js">
            
        </script>
        
    </body>

    <%- include ('partials/footer.ejs') %>  